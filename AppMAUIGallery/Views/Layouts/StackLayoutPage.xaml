<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="StackLayoutPage">
	<StackLayout
		Margin="20"
		Padding="20"
		BackgroundColor="AliceBlue"
		Orientation="Vertical"
		Spacing="10">
		<Label Text="Olá mundo!" />

		<StackLayout Orientation="Horizontal">
			<Button HorizontalOptions="Start" Text="Olá mundo 1!" />
			<Button HorizontalOptions="Start" Text="Olá mundo 2!" />
		</StackLayout>

		<VerticalStackLayout
			Padding="10"
			BackgroundColor="Aquamarine"
			Spacing="10">
			<Label Text="Olá mundo 1!" />
			<Label Text="Olá mundo 2!" />
		</VerticalStackLayout>
		<HorizontalStackLayout BackgroundColor="Aquamarine" Spacing="20">
			<Label Text="Olá mundo 1!" />
			<Label Text="Olá mundo 2!" />
		</HorizontalStackLayout>

		<Button
			HeightRequest="100"
			HorizontalOptions="Center"
			Text="Olá mundo!"
			WidthRequest="200" />
	</StackLayout>
</ContentPage>