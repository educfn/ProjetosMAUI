	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="FlexLayoutPage">
	<FlexLayout Direction="Column" AlignItems="Start" JustifyContent="SpaceEvenly">
		<Label Text="Linha 1" Padding="10" BackgroundColor="RosyBrown" />
