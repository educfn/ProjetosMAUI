		<Label TextType="Html">
			<Label.Text>
				<![CDATA[
				<i>Olá mundo!</i> <br /> <strong>Como vai você? </strong>
				]]>
			</Label.Text>
		</Label>
	</VerticalStackLayout>
</ContentPage>