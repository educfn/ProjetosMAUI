	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="LabelPage">
	<VerticalStackLayout>
		<Label
			Text="Welcome to .NET MAUI!"
			TextColor="#FF0000"
			TextDecorations="Underline"
			TextTransform="Lowercase" />
